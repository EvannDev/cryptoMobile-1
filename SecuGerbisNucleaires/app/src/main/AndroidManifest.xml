<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.isen.gerbisnucleaires.secugerbisnucleaires">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/logologin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:debuggable="false"
        tools:ignore="GoogleAppIndexingWarning,HardcodedDebugMode">

        <activity android:name=".SignUpActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".HomeActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".EditPersonalActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".PatientsInfoActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".PersonalInfoActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".SpecificVisitActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".AddVisitActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".AddPatientActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".SpecificPatientActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MessengerActivity" />
    </application>

</manifest>